{
  "name": "{{projectName}}",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter main dev",
    "dev:all": "pnpm -r dev",
    "build": "pnpm --filter default build && pnpm --filter main build",
    "build:all": "pnpm -r build",
    "preview": "pnpm --filter main preview"
  },
  "devDependencies": {
    "@types/node": "^22.0.0"
  },
  "workspaces": [
    "site",
    "foundation",
    "sites/*",
    "foundations/*"
  ],
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild", "sharp"]
  }
}
